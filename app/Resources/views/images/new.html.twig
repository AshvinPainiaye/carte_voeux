{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="text-center">Création de carte</h1>

                {{ form_start(form) }}

                <div class="form-group">
                    {{ form_label(form.type) }}
                    {{ form_widget(form.type, {'attr': {'class':'form-control'}}) }}
                    {{ form_errors(form.type) }}
                </div>

                {{ form_widget(form) }}

                <input type="submit" value="Crée" class="btn btn-default" style="margin-top:30px;"/>

                {{ form_end(form) }}

            </div>
        </div>
    </div>

{% endblock %}