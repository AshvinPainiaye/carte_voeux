<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Carte des voeux{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{asset('bootstrap/dist/css/bootstrap.min.css')}}">

        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>

        {% block navbar %}
            <div class="navbar navbar-default">
                <div class="container">
                    <div class="navbar-header">
                        <a href="{{ path('images_index') }}" class="navbar-brand">Carte de voeux</a>
                        <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div class="navbar-collapse collapse">

                        <ul class="nav navbar-nav">
                            <li>
                                <a href="{{ path('images_new') }}">Crée une carte</a>
                            </li>
                        </ul>

                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                    <a class="nav-link" href="{{ path('fos_user_profile_edit') }}">
                                        Connecté en tant que: {{ app.user.username }}</a>
                                {% else %}
                                    <a class="nav-link"
                                       href="{{ path('fos_user_security_login') }}">{{ 'Connexion'|trans({}, 'FOSUserBundle') }}</a>
                                {% endif %}
                            </li>
                            <li>
                                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                    <a href="{{ path('fos_user_security_logout') }}">{{ 'Se deconnecter'|trans({}, 'FOSUserBundle') }}</a>
                                {% else %}
                                    <a href="{{ path('fos_user_registration_register') }}">{{ 'Inscription'|trans({}, 'FOSUserBundle') }}</a>
                                {% endif %}
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        {% endblock %}    

    {% block body %}{% endblock %}
    {% block javascripts %}

        <script src="{{asset('jquery/dist/jquery.min.js')}}"></script>
        <script src="{{asset('bootstrap/dist/js/bootstrap.min.js')}}"></script>

    {% endblock %}
    
        {% block mainJavascripts %}

    {% endblock %}
    
</body>
</html>
